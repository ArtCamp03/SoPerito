<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marrom"
    tools:context=".view.perito.EditPerfilActivity">

    <ImageView
        android:id="@+id/img_action_bar"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_marginTop="4dp"
        android:background="@color/black"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_slogan"
        android:layout_width="246dp"
        android:layout_height="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="14dp"
        android:src="@drawable/img_slogan" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="152dp"
        android:layout_height="162dp"
        android:layout_marginTop="66dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_user_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/text_experiencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experiencias:"
        android:textSize="22sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/img_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edit_add_experiencia"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:hint="Experiencia:"
        android:textSize="16sp"
        android:textColorHint="@color/gold"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:inputType="text"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/text_experiencia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_xp"
         />

    <Button
        android:id="@+id/btn_add_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/gold"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/img_user"
        app:layout_constraintStart_toEndOf="@+id/edit_add_experiencia"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_resul_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_add_experiencia"/>

    <TextView
        android:id="@+id/text_especialidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Especialidades:"
        android:textSize="22sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/text_resul_xp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edit_add_especialidade"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:hint="Especialidade:"
        android:textSize="16sp"
        android:inputType="text"
        android:layout_marginTop="12dp"
        android:padding="6dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:textColorHint="@color/gold"
        app:layout_constraintTop_toBottomOf="@+id/text_especialidade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_esp" />

    <Button
        android:id="@+id/btn_add_esp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/gold"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@id/btn_add_xp"
        app:layout_constraintStart_toEndOf="@+id/edit_add_especialidade"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_resul_esp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_add_especialidade"/>

    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="CANCELAR"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/gold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toStartOf="@id/btn_salvar" />

    <Button
        android:id="@+id/btn_salvar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="SALVAR"
        android:layout_marginTop="4dp"
        android:textColor="@color/gold"
        android:backgroundTint="@color/black"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/btn_cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>