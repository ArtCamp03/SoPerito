<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marrom"
    android:padding="20dp"
    tools:context=".view.usuario.SegurancaConfigActivity">

    <TextView
        android:id="@+id/text_senha_antiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="senha atual:"
        android:textColor="@color/gold"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_email"
        />

    <EditText
        android:id="@+id/edit_senha_antiga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="senha"
        android:background="#fff"
        android:layout_marginTop="12sp"
        android:padding="8dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/text_senha_antiga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_senha_nova"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Senha:"
        android:textColor="@color/gold"
        android:textSize="16dp"
        android:layout_marginTop="12sp"
        app:layout_constraintTop_toBottomOf="@+id/edit_senha_antiga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_password"
        />

    <EditText
        android:id="@+id/edit_senha_nova"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#fff"
        android:padding="8dp"
        android:hint="nova senha"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/text_senha_nova"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
    android:id="@+id/text_senha_confirm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Confirmar Senha:"
    android:textColor="@color/gold"
    android:textSize="16dp"
    android:layout_marginTop="12sp"
    app:layout_constraintTop_toBottomOf="@+id/edit_senha_nova"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/edit_password"
    />

    <EditText
        android:id="@+id/edit_senha_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#fff"
        android:padding="8dp"
        android:hint="confirmar senha"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/text_senha_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancelar"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:backgroundTint="@color/gold"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_salvar"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="salvar"
        android:textAllCaps="true"
        android:textColor="@color/gold"
        android:backgroundTint="@color/black"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@+id/btn_cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>