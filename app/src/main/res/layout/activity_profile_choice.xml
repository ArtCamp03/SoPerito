<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marrom"
    android:padding="20dp"
    tools:context=".view.usuario.ProfileChoiceActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="214dp"
        android:layout_height="182dp"
        android:src="@drawable/img_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_perito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Perito"
        android:padding="12dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textAllCaps="true"
        android:textSize="26dp"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/button_empregador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="Empregador"
        android:padding="12dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textAllCaps="true"
        android:textSize="26dp"
        app:layout_constraintTop_toBottomOf="@+id/button_perito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>