<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marrom"
    tools:context=".view.empregador.PerfilEmpregadorActivity">

    <ImageView
        android:id="@+id/img_action_bar"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_marginTop="4dp"
        android:background="@color/black"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_slogan"
        android:layout_width="246dp"
        android:layout_height="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="14dp"
        android:src="@drawable/img_slogan" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="152dp"
        android:layout_height="162dp"
        android:layout_marginTop="66dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_user_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem"
        android:textSize="34dp"
        android:textAllCaps="true"
        android:textColor="@color/gold"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/img_slogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/img_action_bar" />

    <TextView
        android:id="@+id/text_welcome_vindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vindo"
        android:textColor="@color/black"
        android:textSize="34dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_action_bar"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/text_name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empregador "
        android:textAllCaps="true"
        android:textSize="26sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/text_welcome_vindo"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/gold" />

    <TextView
        android:id="@+id/text_dados_contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados para contato:"
        android:textSize="22sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/text_name_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

<!--
 <TextView
        android:id="@+id/text_endereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EndereÃ§o:"
        android:textSize="16sp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/text_dados_contato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
-->


    <TextView
        android:id="@+id/text_telefone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Telefone:"
        android:textSize="16sp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/text_dados_contato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_result_telefone" />

    <TextView
        android:id="@+id/text_result_telefone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="(xx) xxxx - xxxx"
        android:textSize="16sp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/text_dados_contato"
        app:layout_constraintStart_toEndOf="@+id/text_telefone"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="16sp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/text_telefone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_result_email" />

    <TextView
        android:id="@+id/text_result_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="empregador@gmail.com"
        android:textSize="16sp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/text_result_telefone"
        app:layout_constraintStart_toEndOf="@+id/text_email"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="OK"
        android:textColor="@color/gold"
        android:backgroundTint="@color/black"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_float_edit_emp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/text_name_user"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_edit_perfil" />

</androidx.constraintlayout.widget.ConstraintLayout>