    <Button
        android:id="@+id/btn_recusar_currculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recusar"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:backgroundTint="@color/gold"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_aceitar_curriculo"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_aceitar_curriculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceitar"
        android:textAllCaps="true"
        android:textColor="@color/gold"
        android:backgroundTint="@color/black"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@+id/btn_recusar_currculo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tex_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15/09/2022"
        android:textSize="22sp"
        android:textColor="@color/gold"
        android:layout_marginStart="72dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_titel_curriculo"
