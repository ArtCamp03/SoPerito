        android:layout_marginTop="8dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_temp_xp" />

    <TextView
        android:id="@+id/text_descript_modo_servico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Observaçao:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_temp_xp"/>

    <TextView
        android:id="@+id/edit_descript_modo_servico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_descript_modo_servico"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_valor_min"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Valor minimo:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_descript_modo_servico"/>

    <TextView
        android:id="@+id/edit_valor_min"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_valor_min" />


    <TextView
        android:id="@+id/text_exp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Experiencia:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_valor_min"/>

    <TextView
        android:id="@+id/edit_exp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_exp"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/text_esp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Especialidade:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_exp"/>

    <TextView
        android:id="@+id/edit_esp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_esp"
        app:layout_constraintEnd_toEndOf="parent"/>

