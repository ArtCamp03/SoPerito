        android:src="@drawable/img_slogan_logo"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/text_titel_curriculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Curriculo"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_marginStart="86dp"
        app:layout_constraintTop_toBottomOf="@id/img_action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tex_data" />

    <TextView
        android:id="@+id/text_nome_vaga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Serviço desejado:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_titel_curriculo"/>

    <TextView
        android:id="@+id/edit_nome_vaga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nome_vaga"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_temp_xp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="tempo de experiencia:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
