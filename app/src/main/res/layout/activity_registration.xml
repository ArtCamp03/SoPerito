<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marrom"
    android:padding="26dp"
    tools:context=".view.usuario.RegistrationActivity">

    <ImageView
        android:id="@+id/img_user_upload"
        android:layout_width="171dp"
        android:layout_height="148dp"
        android:src="@drawable/ic_user_upload"
        app:layout_constraintBottom_toTopOf="@+id/edit_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:padding="12dp"
        android:hint="E-mail"
        android:textSize="16dp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/img_user_upload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:hint="Nome Completo"
        android:textSize="16dp"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/edit_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        />

    <EditText
        android:id="@+id/edit_cpf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:hint="CPF"
        android:textSize="16dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/edit_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        />

    <EditText
        android:id="@+id/edit_telephone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:hint="Telefone"
        android:textSize="16dp"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@+id/edit_cpf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:hint="Senha"
        android:textSize="16dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/edit_telephone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        />

    <EditText
        android:id="@+id/edit_password_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:hint="Confirmar Senha"
        android:textSize="16dp"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="confirmar"
        android:textAllCaps="true"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/edit_password_confirm"
        app:layout_constraintStart_toEndOf="@+id/button_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/gold"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="cancelar"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/edit_password_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/black"
        android:textColor="@color/gold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>