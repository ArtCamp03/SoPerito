<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marrom"
    tools:context=".view.empregador.MenuEmpregadorActivity">

    <ImageView
        android:id="@+id/img_action_bar"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/black"
        android:padding="8dp"
        android:src="@drawable/img_slogan_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_busca"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_buscar_peritos"
        app:layout_constraintEnd_toStartOf="@+id/btn_peritos_dispo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_action_bar" />

    <ImageView
        android:id="@+id/btn_peritos_dispo"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="42dp"
        android:src="@drawable/ic_perito_disponivel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_action_bar" />

    <ImageView
        android:id="@+id/btn_add_vaga"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_adic_vaga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_candidatos"
        app:layout_constraintTop_toBottomOf="@+id/btn_peritos_dispo" />

    <ImageView
        android:id="@+id/btn_candidatos"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="42dp"
        android:src="@drawable/ic_candidatos"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_vaga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_busca" />

    <ImageView
        android:id="@+id/btn_config"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_configuracoes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>